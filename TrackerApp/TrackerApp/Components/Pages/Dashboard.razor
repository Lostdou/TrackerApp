@page "/dashboard"
@inject NavigationManager Nav

<div class="min-h-screen bg-gray-50 dark:bg-dark-bg p-6 flex flex-col items-center justify-center space-y-8 transition-colors duration-300 relative">

    <div class="text-center space-y-2 animate-fade-in-down">
        <div class="w-24 h-24 mx-auto mb-6 relative hover:scale-105 transition-transform duration-300">
            <div class="absolute inset-0 bg-pink-100 dark:bg-pink-900/30 rounded-2xl rotate-6 animate-pulse opacity-50"></div>

            <img src="images/appicon.png"
                 class="w-full h-full object-contain relative z-10 drop-shadow-xl"
                 alt="Logo" />
        </div>

        <h1 class="text-3xl font-black text-gray-800 dark:text-white tracking-tight">
            Hola, <span class="text-love">@myName</span>
        </h1>
        <div class="inline-block bg-white dark:bg-dark-card px-4 py-1 rounded-full shadow-sm">
            <p class="text-gray-400 dark:text-gray-500 font-black tracking-widest uppercase text-[10px] flex items-center gap-2">
                <i class="fas fa-hashtag text-love"></i> @pairingCode
            </p>
        </div>
    </div>

    <div class="w-full max-w-md grid grid-cols-2 gap-4 animate-fade-in-up">

        <button @onclick='() => Nav.NavigateTo("/tracker")'
                class="col-span-2 bg-white dark:bg-dark-card p-6 rounded-[2rem] shadow-sm hover:shadow-lg active:scale-95 transition-all duration-300 flex items-center gap-6 group border border-transparent hover:border-pink-100 dark:hover:border-gray-700">
            <div class="bg-pink-50 dark:bg-pink-900/20 w-16 h-16 rounded-2xl flex items-center justify-center group-hover:bg-love group-hover:text-white transition-colors duration-300 text-love shadow-sm">
                <i class="fas fa-satellite-dish text-2xl"></i>
            </div>
            <div class="text-left flex-1">
                <h3 class="font-bold text-xl text-gray-800 dark:text-white leading-none mb-1">Tracker</h3>
                <p class="text-xs text-gray-400 font-medium">Ubicación real</p>
            </div>
            <i class="fas fa-chevron-right text-gray-300 group-hover:translate-x-1 transition-transform"></i>
        </button>

        <button @onclick='() => Nav.NavigateTo("/media")'
                class="bg-white dark:bg-dark-card p-5 rounded-[2rem] shadow-sm hover:shadow-lg active:scale-95 transition-all duration-300 flex flex-col items-center justify-center gap-3 text-center group border border-transparent hover:border-blue-100 dark:hover:border-gray-700">
            <div class="bg-blue-50 dark:bg-blue-900/20 w-14 h-14 rounded-2xl flex items-center justify-center text-blue-500 group-hover:bg-blue-500 group-hover:text-white transition-colors duration-300 shadow-sm">
                <i class="fas fa-film text-2xl"></i>
            </div>
            <div>
                <h3 class="font-bold text-gray-800 dark:text-white text-lg">Cine</h3>
                <p class="text-[10px] text-gray-400 font-medium">Recomendaciones</p>
            </div>
        </button>

        <button @onclick='() => Nav.NavigateTo("/postit")'
                class="bg-white dark:bg-dark-card p-5 rounded-[2rem] shadow-sm hover:shadow-lg active:scale-95 transition-all duration-300 flex flex-col items-center justify-center gap-3 text-center group border border-transparent hover:border-yellow-100 dark:hover:border-gray-700">
            <div class="bg-yellow-50 dark:bg-yellow-900/20 w-14 h-14 rounded-2xl flex items-center justify-center text-yellow-500 group-hover:bg-yellow-500 group-hover:text-white transition-colors duration-300 shadow-sm">
                <i class="fas fa-paper-plane text-2xl"></i>
            </div>
            <div>
                <h3 class="font-bold text-gray-800 dark:text-white text-lg">Post-it</h3>
                <p class="text-[10px] text-gray-400 font-medium">Enviar Nota</p>
            </div>
        </button>

        <button @onclick='() => Nav.NavigateTo("/details")'
                class="col-span-2 bg-white dark:bg-dark-card p-4 rounded-[2rem] shadow-sm hover:shadow-lg active:scale-95 transition-all duration-300 flex items-center justify-between px-6 group border border-transparent hover:border-purple-100 dark:hover:border-gray-700">
            <div class="flex items-center gap-4">
                <div class="bg-purple-50 dark:bg-purple-900/20 w-10 h-10 rounded-xl flex items-center justify-center text-purple-500 group-hover:bg-purple-500 group-hover:text-white transition-colors duration-300 shadow-sm">
                    <i class="fas fa-sliders-h text-sm"></i>
                </div>
                <div class="text-left">
                    <h3 class="font-bold text-gray-800 dark:text-white text-base">Detalles</h3>
                </div>
            </div>
            <i class="fas fa-chevron-right text-gray-300 text-xs"></i>
        </button>
    </div>

    <button @onclick="Logout" class="mt-auto mb-4 text-gray-400 hover:text-red-500 text-xs font-bold flex items-center gap-2 transition opacity-60 hover:opacity-100">
        <i class="fas fa-sign-out-alt"></i> CERRAR SESIÓN
    </button>
</div>

@code {
    private string myName = "";
    private string pairingCode = "";

    protected override void OnInitialized()
    {
        myName = Preferences.Get("user_name", "Usuario");
        pairingCode = Preferences.Get("pairing_code", "---");
    }

    private void Logout()
    {
        Preferences.Clear();
        Nav.NavigateTo("/");
    }
}