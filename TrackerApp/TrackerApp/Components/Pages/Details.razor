@page "/details"
@inject NavigationManager Nav

<div class="flex flex-col h-full bg-white dark:bg-dark-bg relative overflow-hidden transition-colors duration-300">

    <button @onclick="GoBack" class="absolute top-6 left-6 z-20 bg-black/30 backdrop-blur-sm text-white p-3 rounded-full hover:bg-black/50 transition shadow-lg border border-white/10">
        <i class="fas fa-arrow-left text-xl"></i>
    </button>

    <div class="h-1/2 bg-gray-900 dark:bg-black flex items-center justify-center rounded-b-[3rem] shadow-xl relative overflow-hidden transition-colors duration-300">

        <img src="images/zorros.png" class="w-full h-full object-cover" alt="Zorros" />

        <div class="absolute inset-0 bg-gradient-to-t from-white dark:from-dark-bg via-transparent to-transparent opacity-100"></div>

    </div>

    <div class="p-8 text-center space-y-6 flex-1 flex flex-col justify-center">

        <div>
            <h2 class="text-3xl font-bold text-gray-800 dark:text-white mb-2">Para Mili</h2>

            <div class="flex justify-center text-love text-opacity-50 gap-4 text-xl mb-4">
                <i class="fas fa-star"></i>
            </div>

            <p class="text-gray-500 dark:text-dark-muted leading-relaxed font-medium px-4 italic">
                "Hay un paraíso en tu corazón,<br />
                tu risa (o esta app) me guiará..."
            </p>
        </div>

        <div class="pt-8">
            <button @onclick="Unlink" class="text-xs text-red-400 dark:text-red-300 border border-red-200 dark:border-red-900/50 px-6 py-3 rounded-xl hover:bg-red-50 dark:hover:bg-red-900/20 hover:text-red-500 transition flex items-center justify-center gap-2 mx-auto uppercase tracking-wide font-bold">
                <i class="fas fa-right-from-bracket"></i>
                Cerrar Sesión
            </button>
        </div>
    </div>
</div>

@code {
    private void GoBack() => Nav.NavigateTo("/dashboard");

    private void Unlink()
    {
        Preferences.Remove("pairing_code");
        Nav.NavigateTo("/");
    }
}