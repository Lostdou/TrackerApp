@page "/details"
@inject NavigationManager Nav

<div class="flex flex-col h-full bg-white dark:bg-dark-bg relative overflow-hidden transition-colors duration-300">

    <button @onclick="GoBack" class="absolute top-6 left-6 z-20 bg-white/20 dark:bg-black/20 backdrop-blur-sm text-white p-3 rounded-full hover:bg-white/30 transition shadow-lg border border-white/20">
        <i class="fas fa-arrow-left text-xl"></i>
    </button>

    <div class="h-1/2 bg-love dark:bg-love-dark flex items-center justify-center rounded-b-[3rem] shadow-xl relative overflow-hidden transition-colors duration-300">
        <i class="fas fa-heart absolute text-[15rem] text-white opacity-10 -right-10 top-0"></i>
        <i class="fas fa-heart absolute text-[10rem] text-white opacity-10 -left-10 bottom-0"></i>
        <i class="fas fa-heart text-9xl text-white animate-pulse drop-shadow-md z-10"></i>
    </div>

    <div class="p-8 text-center space-y-6 flex-1 flex flex-col justify-center">

        <div>
            <h2 class="text-3xl font-bold text-gray-800 dark:text-white mb-2">Para Mili</h2>

            <div class="flex justify-center text-love text-opacity-50 gap-4 text-xl mb-4">
                <i class="fas fa-star"></i>
            </div>

            <p class="text-gray-500 dark:text-dark-muted leading-relaxed font-medium px-4">
                "Hay un paraiso en tu corazon,<br />
                tu risa (o esta app) me guiara..."
            </p>
        </div>

        <div class="pt-8">
            <button @onclick="Unlink" class="text-xs text-red-400 dark:text-red-300 border border-red-200 dark:border-red-900/50 px-6 py-3 rounded-xl hover:bg-red-50 dark:hover:bg-red-900/20 hover:text-red-500 transition flex items-center justify-center gap-2 mx-auto uppercase tracking-wide font-bold">
                <i class="fas fa-right-from-bracket"></i>
                Cerrar Sesión
            </button>
        </div>
    </div>
</div>

@code {
    private void GoBack() => Nav.NavigateTo("/tracker");

    private void Unlink()
    {
        Preferences.Remove("pairing_code");
        Nav.NavigateTo("/");
    }
}